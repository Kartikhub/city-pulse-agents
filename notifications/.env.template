# Environment Variables for City Pulse Notification Agent
# Copy this file to .env and update with your actual values

# =============================================================================
# QUICK START (for testing without external services)
# =============================================================================
# Just set USE_REAL_AI=true and add your Google AI API key to test AI features

# AI Configuration (Get API key from https://aistudio.google.com/)
USE_REAL_AI=true
GOOGLE_API_KEY=your-google-ai-api-key-here
AI_MODEL=gemini-2.0-flash

# =============================================================================
# FIREBASE CONFIGURATION (optional for basic testing)
# =============================================================================
# Enable Firebase for real push notifications
FIREBASE_ENABLED=false
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com/

# =============================================================================
# GOOGLE CLOUD PUBSUB (optional for real-time data)
# =============================================================================
# Enable PubSub for real-time agent communication
PUBSUB_ENABLED=false
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# =============================================================================
# ADVANCED AI SETTINGS
# =============================================================================
AI_CONFIDENCE_THRESHOLD=0.7
AI_LEARNING_ENABLED=true
AI_EXPLANATION_REQUIRED=true
AI_FALLBACK_ENABLED=true
AI_RESPONSE_TIMEOUT=5.0

# =============================================================================
# TESTING SETTINGS
# =============================================================================
DEBUG_MODE=true
LOG_LEVEL=INFO
